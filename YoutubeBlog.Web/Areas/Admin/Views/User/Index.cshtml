@model List<UserDto>

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcılar
    </h4>

    <div class="card">
        @*<h5 class="card-header">Table Basic</h5>*@
        <div class="table-responsive text-nowrap p-4">

            <a class="btn btn-success mb-4" asp-area="Admin" asp-controller="User" asp-action="Add">
                Kullanıcı Ekle <i class="bx bx-plus"></i>
            </a>

            <table class="table table-bordered" id="usersTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Email</th>
                        <th>Telefon numarası</th>
                        <th>Rol</th>
                        <th>Email doğrulaması</th>
                        <th>Bağlantı hataları</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Email</th>
                        <th>Telefon numarası</th>
                        <th>Rol</th>
                        <th>Email doğrulaması</th>
                        <th>Bağlantı hataları</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var user in Model)
                    {
                        <tr name="@user.Id">
                            <th>@user.FirstName</th>
                            <th>@user.LastName</th>
                            <th>@user.Email</th>
                            <th>@user.PhoneNumber</th>
                            <th>@user.Role</th>
                            <th>@(user.EmailConfirmed ? "Doğrulanmış":"Doğrulanmamış")</th>
                            <th>@user.AccessFailedCount</th>
                            <th>
                                <a class="btn btn-primary btn-sm"
                                   data-id="@user.Id"
                                   asp-area="Admin"
                                   asp-controller="User"
                                   asp-action="Update"
                                   asp-route-categoryId="@user.Id"><i class="bx bxs-edit"></i></a>

                                <a class="btn btn-danger btn-sm"
                                   data-id="@user.Id"
                                   asp-area="Admin"
                                   asp-controller="User"
                                   asp-action="Delete"
                                   asp-route-categoryId="@user.Id"><i class="bx bxs-minus-circle"></i></a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


</div>


@section Scripts{
    <script src="~/js/User/index.js" type="application/ecmascript"></script>
}
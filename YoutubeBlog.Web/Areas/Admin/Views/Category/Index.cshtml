@model List<CategoryDto>

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Kategori Yönetimi /</span> Kategoriler
    </h4>

    <div class="card">
        @*<h5 class="card-header">Table Basic</h5>*@
        <div class="table-responsive text-nowrap p-4">

            <a class="btn btn-success mb-4" asp-area="Admin" asp-controller="Category" asp-action="Add">
                Kategori Ekle <i class="bx bx-plus"></i>
            </a>

            <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>İsim</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var category in Model)
                    {
                        <tr name="@category.Id">
                            <th>@category.Name</th>
                            <th>@category.CreatedDate.ToShortDateString()</th>
                            <th>@category.CreatedBy</th>
                            <th>@(category.IsDeleted ? "Aktif değil" : "Aktif")</th>
                            <th>
                                <a class="btn btn-primary btn-sm"
                                   data-id="@category.Id"
                                   asp-area="Admin"
                                   asp-controller="Category"
                                   asp-action="Update"
                                   asp-route-categoryId="@category.Id"><i class="bx bxs-edit"></i></a>

                                <a class="btn btn-danger btn-sm"
                                   data-id="@category.Id"
                                   asp-area="Admin"
                                   asp-controller="Category"
                                   asp-action="Delete"
                                   asp-route-categoryId="@category.Id"><i class="bx bxs-minus-circle"></i></a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


</div>


@section Scripts{
    <script src="~/js/Category/index.js" type="application/ecmascript"></script>
}